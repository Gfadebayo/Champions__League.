<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_select_team">

    <TextView
        android:id="@+id/team_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team Names"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/firstTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:gravity="center"
        android:hint="Team 1"
        android:inputType="textShortMessage"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/team_title"
        app:layout_constraintStart_toStartOf="@+id/team_title"
        app:layout_constraintTop_toBottomOf="@+id/team_title"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/secondTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Team 2"
        android:inputType="textShortMessage"
        app:layout_constraintEnd_toEndOf="@+id/firstTeam"
        app:layout_constraintStart_toStartOf="@+id/firstTeam"
        app:layout_constraintTop_toBottomOf="@+id/firstTeam"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/thirdTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Team 3"
        android:inputType="textShortMessage"
        app:layout_constraintEnd_toEndOf="@+id/secondTeam"
        app:layout_constraintStart_toStartOf="@+id/secondTeam"
        app:layout_constraintTop_toBottomOf="@+id/secondTeam"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/fourthTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Team 4"
        android:inputType="textShortMessage"
        app:layout_constraintEnd_toEndOf="@+id/thirdTeam"
        app:layout_constraintStart_toStartOf="@+id/thirdTeam"
        app:layout_constraintTop_toBottomOf="@+id/thirdTeam"
        tools:ignore="Autofill,HardcodedText" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthTeam">

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#FFFFFF"
            android:text="Next"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
