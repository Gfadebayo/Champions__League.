<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow.NewOverflow</item>
        <item name="android:toolbarStyle">@style/Widget.MaterialComponents.Toolbar.MainToolbar</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.MainToolbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppCompat.ActionButton.Overflow.NewOverflow">
        <item name="android:tint">@color/actionBarTint</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.FixtureTextView">
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:maxEms">8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxWidth">110dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense.FixtureEdit">
        <item name="android:ems">3</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.NiceSpinner">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">#00E01616</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.MainToolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="titleTextColor">@color/actionBarTint</item>
        <item name="subtitleTextColor">@color/actionBarTint</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.TableTextView">
        <item name="android:background">@drawable/table_background</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
